{
    "$schema": "https://opencode.ai/config.json",
    "model": "opencode/big-pickle",
    "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "headers": {
                "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
            }
        }
    },
    "command": {
        "ra-epic": {
            "description": "Создание эпика: описание бизнес требований и разбивка на этапы",
            "template": "{file:./.ai/commands/ra-epic.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-spec": {
            "description": "Описание функциональных требований",
            "template": "{file:./.ai/commands/ra-spec.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-plan-sum": {
            "description": "Формирование сводного технического плана",
            "template": "{file:./.ai/commands/ra-plan-sum.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-plan-dev": {
            "description": "Формирование технического плана по разработке кода",
            "template": "{file:./.ai/commands/ra-plan-dev.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-plan-test": {
            "description": "Формирование технического плана по написанию тестов",
            "template": "{file:./.ai/commands/ra-plan-test.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-impl": {
            "description": "Разработка программного кода",
            "template": "{file:./.ai/commands/ra-impl.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-test": {
            "description": "Написание тестов",
            "template": "{file:./.ai/commands/ra-test.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-tech-doc": {
            "description": "Создание технической документации",
            "template": "{file:./.ai/commands/ra-tech-doc.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-arch-doc": {
            "description": "Создание архитектурной документации",
            "template": "{file:./.ai/commands/ra-arch-doc.md}",
            "model": "opencode/gpt-5-nano"
        }
    },
    "agent": {
        "create-epic": {
            "model": "opencode/big-pickle",
            "description": "Создание бизнес требований",
            "prompt": "{file:./.ai/agents/Stage0CreateEpic.md}"
        },
        "create-spec": {
            "model": "opencode/big-pickle",
            "description": "Создание функциональных требований",
            "prompt": "{file:./.ai/agents/Stage1CreateSpec.md}"
        },
        "create-plan-sum": {
            "model": "opencode/big-pickle",
            "description": "Создание сводного технического плана",
            "prompt": "{file:./.ai/agents/Stage2CreatePlanSummary.md}"
        },
        "create-plan-dev": {
            "model": "opencode/big-pickle",
            "description": "Создание технического плана разработки кода",
            "prompt": "{file:./.ai/agents/Stage2CreatePlanDev.md}"
        },
        "create-plan-test": {
            "model": "opencode/big-pickle",
            "description": "Создание технического плана написания тестов",
            "prompt": "{file:./.ai/agents/Stage2CreatePlanTest.md}"
        },
        "implementation": {
            "model": "opencode/big-pickle",
            "description": "Реализация кода на PHP",
            "prompt": "{file:./.ai/agents/Stage3Implementation.md}"
        },
        "testing": {
            "model": "opencode/big-pickle",
            "description": "Разработка тестов",
            "prompt": "{file:./.ai/agents/Stage4Testing.md}"
        },
        "tech-doc": {
            "model": "opencode/big-pickle",
            "description": "Создание технической документации",
            "prompt": "{file:./.ai/agents/Stage5TechDoc.md}"
        },
        "arch-doc": {
            "model": "opencode/big-pickle",
            "description": "Создание архитектурной документации",
            "prompt": "{file:./.ai/agents/Stage6ArchDoc.md}"
        },
        "code-auto-fix": {
            "model": "opencode/gpt-5-nano",
            "description": "Автоматическое исправление кода и стиля (Rector и PHPCBF)",
            "prompt": "{file:./.ai/agents/CodeAutoFix.md}"
        },
        "phpstan": {
            "model": "opencode/gpt-5-nano",
            "description": "PHPStan",
            "prompt": "{file:./.ai/agents/PHPStan.md}"
        },
        "rector": {
            "model": "opencode/gpt-5-nano",
            "description": "Rector",
            "prompt": "{file:./.ai/agents/Rector.md}"
        },
        "phpcs": {
            "model": "opencode/gpt-5-nano",
            "description": "PHP_CodeSniffer",
            "prompt": "{file:./.ai/agents/PHPCS.md}"
        },
        "markdownlint": {
            "model": "opencode/gpt-5-nano",
            "description": "Исправление ошибок markdownlint",
            "prompt": "{file:./.ai/agents/Markdownlint.md}"
        }
    }
}
