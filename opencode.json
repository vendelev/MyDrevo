{
    "$schema": "https://opencode.ai/config.json",
    "model": "opencode/big-pickle",
    "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "headers": {
                "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
            }
        }
    },
    "command": {
        "ra-create-epic": {
            "description": "Создание эпика: описание бизнес требований и разбивка на этапы",
            "template": "{file:./.ai/commands/ra-create-epic.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-create-feature": {
            "description": "Описание функциональных требований",
            "template": "{file:./.ai/commands/ra-create-feature.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-create-summary-plan": {
            "description": "Формирование сводного технического плана",
            "template": "{file:./.ai/commands/ra-create-summary-plan.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-create-dev-plan": {
            "description": "Формирование технического плана по разработке кода",
            "template": "{file:./.ai/commands/ra-create-dev-plan.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-create-test-plan": {
            "description": "Формирование технического плана по написанию тестов",
            "template": "{file:./.ai/commands/ra-create-test-plan.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-php-implementation": {
            "description": "Разработка программного кода согласно техническому плану",
            "template": "{file:./.ai/commands/ra-php-implementation.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-php-test-implementation": {
            "description": "Написание тестов согласно техническому плану",
            "template": "{file:./.ai/commands/ra-php-test-implementation.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-create-tech-doc": {
            "description": "Создание технической документации",
            "template": "{file:./.ai/commands/ra-create-tech-doc.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-create-arch-doc": {
            "description": "Создание архитектурной документации",
            "template": "{file:./.ai/commands/ra-create-arch-doc.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-php-auto-fixer": {
            "description": "Автоматическое исправление кода и стиля (Rector и PHPCBF)",
            "template": "{file:./.ai/commands/ra-php-auto-fixer.md}",
            "model": "opencode/gpt-5-nano"
        },
        "ra-phpcs-developer": {
            "description": "Поиск ошибок PHP_CodeSniffer и их исправление",
            "template": "{file:./.ai/commands/ra-phpcs-developer.md}",
            "model": "opencode/gpt-5-nano"
        }
    },
    "agent": {
        "epic-writer": {
            "model": "opencode/big-pickle",
            "description": "Создание бизнес требований и планирование этапов эпика",
            "prompt": "{file:./.ai/agents/epic-writer.md}"
        },
        "feature-writer": {
            "model": "opencode/big-pickle",
            "description": "Создание функциональных требований для этапа",
            "prompt": "{file:./.ai/agents/feature-writer.md}"
        },
        "summary-plan-writer": {
            "model": "opencode/big-pickle",
            "description": "Создание сводного технического плана",
            "prompt": "{file:./.ai/agents/summary-plan-writer.md}"
        },
        "dev-plan-writer": {
            "model": "opencode/big-pickle",
            "description": "Создание технического плана разработки кода",
            "prompt": "{file:./.ai/agents/dev-plan-writer.md}"
        },
        "test-plan-writer": {
            "model": "opencode/big-pickle",
            "description": "Создание технического плана написания тестов",
            "prompt": "{file:./.ai/agents/test-plan-writer.md}"
        },
        "php-developer": {
            "model": "opencode/big-pickle",
            "description": "Реализация кода на PHP согласно техническому плану",
            "prompt": "{file:./.ai/agents/php-developer.md}"
        },
        "php-test-developer": {
            "model": "opencode/big-pickle",
            "description": "Разработка тестов согласно техническому плану",
            "prompt": "{file:./.ai/agents/php-test-developer.md}"
        },
        "tech-doc-writer": {
            "model": "opencode/big-pickle",
            "description": "Создание технической документации для модулей",
            "prompt": "{file:./.ai/agents/tech-doc-writer.md}"
        },
        "arch-doc-writer": {
            "model": "opencode/big-pickle",
            "description": "Создание архитектурной документации в формате DocHub",
            "prompt": "{file:./.ai/agents/arch-doc-writer.md}"
        },
        "php-auto-fixer": {
            "model": "opencode/gpt-5-nano",
            "description": "Автоматическое исправление кода и стиля (Rector и PHPCBF)",
            "prompt": "{file:./.ai/agents/php-auto-fixer.md}"
        },
        "phpstan-developer": {
            "model": "opencode/gpt-5-nano",
            "description": "Поиск ошибок PHPStan и их исправление",
            "prompt": "{file:./.ai/agents/phpstan-developer.md}"
        },
        "phpcs-developer": {
            "model": "opencode/gpt-5-nano",
            "description": "Поиск ошибок PHP_CodeSniffer и их исправление",
            "prompt": "{file:./.ai/agents/phpcs-developer.md}"
        },
        "markdownlint": {
            "model": "opencode/gpt-5-nano",
            "description": "Исправление ошибок форматирования Markdown-документов",
            "prompt": "{file:./.ai/agents/markdownlint.md}"
        }
    }
}
