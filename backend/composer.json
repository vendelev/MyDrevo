{
    "name": "vendelev/my-drevo",
    "description": "Генеалогическое древо",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.5",
        "ext-pdo": "*",
        "guzzlehttp/guzzle": "^7.10",
        "laravel/framework": "^12.46.0",
        "monolog/monolog": "^3.10",
        "psr/log": "^3.0.2"
    },
    "require-dev": {
        "ext-posix": "*",
        "driftingly/rector-laravel": "^2.1.9",
        "ergebnis/composer-normalize": "^2.48.2",
        "fakerphp/faker": "^1.24.1",
        "guzzlehttp/psr7": "^2.8",
        "larastan/larastan": "^3.8.1",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.3",
        "phpat/phpat": "^0.12.1",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan": "^2.1.33",
        "phpstan/phpstan-phpunit": "^2.0.11",
        "phpstan/phpstan-strict-rules": "^2.0.7",
        "phpunit/phpunit": "^12.5.4",
        "psr/http-message": "^2.0",
        "rector/rector": "^2.3.0",
        "roave/security-advisories": "dev-latest",
        "shipmonk/composer-dependency-analyser": "^1.8.4",
        "slevomat/coding-standard": "^8.22.1",
        "squizlabs/php_codesniffer": "^3.13.5"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        },
        "bump-after-update": true,
        "cache-dir": "./storage/temp/composer",
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "secure-http": false,
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "fix": [
            "composer normalize --diff",
            "composer bump",
            "vendor/bin/phpcbf || echo \"Внесли правки\"",
            "vendor/bin/rector process"
        ],
        "init-test-db": [],
        "phpcs": "vendor/bin/phpcs",
        "phpstan": "vendor/bin/phpstan --memory-limit=-1",
        "phpunit": "php -dxdebug.mode=coverage vendor/bin/phpunit --coverage-text --testdox",
        "phpunit-html-coverage": "php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-html storage/temp/phpunit/unit-coverage",
        "rector": "vendor/bin/rector process --dry-run",
        "test": [
            "composer normalize --diff --dry-run",
            "composer bump --dry-run",
            "composer validate",
            "composer rector",
            "composer phpcs",
            "composer phpstan",
            "php vendor/bin/composer-dependency-analyser",
            "composer phpunit"
        ]
    }
}
